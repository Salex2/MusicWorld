@model MusicWorld.ViewModels.EditUserViewModel
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
   
}

    <section style="width: 1370px; height: 948px; overflow-y: scroll;" class="section-form">

        <h2>Edit User</h2>

        <div class="row ">
            <form class="contact-form" method="post">
                <div asp-validation-summary="All" class="input-validation-error"></div>

                <div class="row">
                    <div class="latime">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col span-2-of-3">

                        <input asp-for="Id" disabled>

                    </div>
                </div>
                <div class="row">
                    <div class="latime">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col span-2-of-3">

                        <input asp-for="Email">

                    </div>
                </div>
                <div class="row">
                    <div class="latime">
                        <label asp-for="UserName"></label>
                    </div>
                    <div class="col span-2-of-3">

                        <input asp-for="UserName">

                    </div>
                </div>

                <div class="row">
                    <div class="latime">
                        <label>&nbsp;</label>
                    </div>
                    <div class="col span-2-of-3">
                        <input type="submit" value="Update">
                        <a asp-action="ListUsers" style="margin-top:auto" class="btn btn-primary">Cancel</a>

                    </div>
                </div>





                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">
                        <h3>User Roles </h3>
                    </div>
                    <div class="card-body">
                        @*check if the current user belongs to any Roles*@
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <h5 class="card-title">@role</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">

                        <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
                            Manage Roles
                        </a>

                    </div>
                </div>





                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">
                        <h3>User Claims </h3>
                    </div>
                    <div class="card-body">
                        @*check if the current user belongs to any Roles*@
                        @if (Model.Claims.Any())
                        {
                            foreach (var claim in Model.Claims)
                            {
                                <h5 class="card-title">@claim</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">

                        <a href="#" style="width:auto" class="btn btn-primary">
                            Manage Claims
                        </a>

                    </div>
                </div>

            </form>
        </div>


    </section>

