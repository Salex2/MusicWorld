@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
}

<section class="section-form">
    <h2>All users roles</h2>


    @*check if there is any role using linq any*@

    @if (Model.Any())
    {

        <a class="btn btn-primary" style="width:auto"
           asp-controller="Administration" asp-action="CreateRole">
            Create Role
        </a>
        foreach (var role in Model)
        {
            <div class="card text-white bg-dark mb-3">
                <div class="card-header">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">
                        Edit
                    </a>
                    <a href="" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card text-white bg-dark mb-3"></div>
        <div class="card-header">
            No roles yet
        </div>

        <div class="card-body">
            <h5 class="card-title">
                Use the button to create a role
            </h5>

        </div>
    }
</section>