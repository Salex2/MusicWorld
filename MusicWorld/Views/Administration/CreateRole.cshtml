@model MusicWorld.ViewModels.CreateRoleViewModel
@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
}

<section class="section-form">

    <h2>Create new Role</h2>

    <div class="row ">
        <form asp-action="CreateRole" asp-controller="Administration" class="contact-form">
            <div asp-validation-summary="All" class="input-validation-error"></div>
            <div class="row">
                <div class="latime">
                    <label asp-for="RoleName">RoleName</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="text" name="RoleName" id="RoleName" placeholder="Type role">
                </div>
            </div>
            

            <div class="row">
                <div class="latime">
                    <label>&nbsp;</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="submit" value="Create Role !">

                </div>
            </div>

        </form>
    </div>


</section>      