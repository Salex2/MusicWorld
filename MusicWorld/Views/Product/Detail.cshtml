@model MusicWorld.Models.ProductViewModel

@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    Layout = "_Layout";
}


<div>
    <p>@Model.Name</p>
    <p>@Model.Description</p>
    <p>@Model.Value</p>
    <div>
        <form asp-action="Detail" asp-controller="Product" method="post">
            <label>Stock</label>
            <select asp-for="ProductSessionId">
                @foreach (var s in Model.Stock)
                {
                    <option value="@s.Id">@s.Description</option>
                }
            </select>
            <button type="submit">Submit</button>
            </form>
        
    </div>
</div>
