@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"

@model MusicWorld.ViewModels.PostViewModel
@{
    Layout = "_Layout";
}

<section class="section-form">

    <h2>Edit Post</h2>

    <div class="row ">
        <form asp-action="Edit" asp-controller="Blog" class="contact-form" method="post">
            <div asp-validation-summary="All" class="input-validation-error"></div>
            <input hidden asp-for="Id"/>
            <div class="row">
                <div class="latime">
                    <label asp-for="Title"></label>
                </div>
                <div class="col span-2-of-3">

                    <input asp-for="Title" >

                </div>
            </div>
            <div class="row">
                <div class="latime">
                    <label asp-for="Body"></label>
                </div>
                <div class="col span-2-of-3">

                     <textarea asp-for="Body" ></textarea>

                </div>
            </div>

            <div class="row">
                <div class="latime">
                    <label>&nbsp;</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="submit" value="Edit !">

                </div>
            </div>

        </form>
    </div>


</section>
