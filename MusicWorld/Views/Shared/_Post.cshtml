@inject MusicWorld.Models.FormattingService Format
@model MusicWorld.Models.Post


<article class="blog-post">
    <h1>
        @Html.ActionLink(Model.Title, "Post", "Blog",
        new{id=Model.Id})
     

    </h1>

    <div class="contents">
        @Model.Body;
    </div>

    <div class="details">
        Posted <span>@Format.AsReadableDate(Model.Posted)</span> by <span>@Model.Author</span>
    </div>
   


</article>
